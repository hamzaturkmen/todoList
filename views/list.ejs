<!-- ejs layout -->
<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>
  </div>

  <div class="box">
    <% for(var i = 0; i < newItems.length; i++) { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=newItems[i]._id%>" onChange="this.form.submit()">
        <p><%= newItems[i].name %> </p>
      </div>
    </form>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" value="" placeholder="new item">
      <button type="submit" name="button">+</button>
    </form>
  </div>

</body>

<%- include("footer") -%>
